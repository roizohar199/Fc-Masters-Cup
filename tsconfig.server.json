{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "server/dist",
    "rootDir": "server/src",
    "noEmitOnError": true
  },
  "include": ["server/src"]
}

